class Array(T)
  # Returns the second element in an array.
  #
  # ```
  # [1, 2, 3, 4, 5].second
  # => [2]
  # ```
  def second
    self[1]
  end

  # Returns the third element in an array.
  #
  # ```
  # [1, 2, 3, 4, 5].second
  # => [3]
  # ```
  def third
    self[2]
  end

  # Returns the fourth element in an array.
  #
  # ```
  # [1, 2, 3, 4, 5].second
  # => [4]
  # ```
  def fourth
    self[3]
  end

  # Returns the fifth element in an array.
  #
  # ```
  # [1, 2, 3, 4, 5].second
  # => [5]
  # ```
  def fifth
    self[4]
  end
end
